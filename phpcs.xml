<?xml version="1.0"?>
<ruleset name="PhpFpmRequest">
	<rule ref="./vendor/forrest79/phpcs/Forrest79CodingStandard/ruleset-fully-qualified-global.xml">
		<exclude name="SlevomatCodingStandard.Attributes.AttributesOrder"/>
		<exclude name="SlevomatCodingStandard.Functions.DisallowTrailingCommaInClosureUse"/>
	</rule>

	<rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
		<properties>
			<property name="rootNamespaces" type="array" value="
				src=>Forrest79\PhPgSql,
				tests=>Forrest79\PhPgSql\Tests,
				benchmarks=>Forrest79\PhPgSql\Benchmarks,
			"/>
		</properties>
	</rule>
</ruleset>
